<div class="jumbotron">
  <div class="col-md-6">
    <h1>To-Dos no Completados</h1>
    <% @todos.each do |todo| %>
    <% if todo.completed == false %>
    <div class="col-sm-12">
    <p> <%= todo.description.capitalize! %> </p>
  </div>
    <% end %>
    <% end %>
    </div>


    <div class="col-md-6">
      <h1>To-Dos Completados</h1>
      <% @todos.each do |todo| %>
      <% if todo.completed == true %>
      <div class="col-sm-12">
        <p> <%= todo.description.capitalize! %> </p>
        </div>
      <% end %>
      <% end %>

    </div>
</div>





